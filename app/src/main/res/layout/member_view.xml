<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/singleListMember">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <RelativeLayout
                android:id="@+id/singleListMemberPartyBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp">

                <TextView
                    android:id="@+id/singleListMemberParty"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:text="@string/list_member_party"
                    android:textColor="@color/black"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/singleListMemberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/singleListMemberPartyBox"
                android:text="@string/list_member_name"
                android:layout_centerInParent="true"
                android:textSize="16sp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>